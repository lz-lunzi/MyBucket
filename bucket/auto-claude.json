            "hash": "0c0ce3686313a58d2d60bca5c9a0ad0ca6060784d15c6e5f6b37cc8cba5e9605",
            "installer": {
                "script": [
                    "Write-Host 'Auto-Claude installation started' -ForegroundColor Green",
                    "Write-Host 'Extracting application files from installer...' -ForegroundColor Yellow",
                    "$pluginsDir = Join-Path $dir '$PLUGINSDIR'",
                    "$app7z = Join-Path $pluginsDir 'app-64.7z'",
                    "if (Test-Path $app7z) {",
                    "    Write-Host \"Found app archive: $($app7z)\"",
                    "    7z x -y $app7z -o\"$dir\"",
                    "    Write-Host 'Application files extracted successfully'",
                    "    Write-Host 'Auto-Claude.exe extracted successfully'",
                    "} else {",
                    "    Write-Error 'App archive not found in installer'",
                    "}",
                    "Write-Host 'Cleaning up installer files...' -ForegroundColor Yellow",
                    "Remove-Item $pluginsDir -Recurse -Force -ErrorAction SilentlyContinue",
                    "Remove-Item (Join-Path $dir '$R0') -Recurse -Force -ErrorAction SilentlyContinue",
                    "Write-Host 'Installation completed.' -ForegroundColor Green"
                ]
            }
        }
    },
    "notes": [
        "Auto-Claude requires the following prerequisites:",
        "1. Node.js 18+ - Download from nodejs.org",
        "2. Python 3.10+ - Download from python.org",
        "3. Docker Desktop - Required for Memory Layer",
        "4. Git repository in your project",
        "5. Claude Code CLI - npm install -g @anthropic-ai/claude-code",
        "6. Claude Pro/Max subscription for Claude Code access",
        "",
        "For detailed setup instructions, visit:",
        "https://github.com/AndyMik90/Auto-Claude#prerequisites"
    ],
    "bin": "Auto-Claude.exe",
    "shortcuts": [
