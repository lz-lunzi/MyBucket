    "installer": {
        "script": [
            "Start-Process \"$dir\\Open-Data-Platform_1.0.0_x86_64.exe\" -ArgumentList '/S', '/D=$env:LOCALAPPDATA\\Programs\\OpenBB' -Wait",
            "Write-Host 'Creating desktop shortcut...' -ForegroundColor Green",
            "$WshShell = New-Object -ComObject WScript.Shell",
            "$Shortcut = $WshShell.CreateShortcut([Environment]::GetFolderPath('Desktop') + '\\OpenBB ODP Desktop.lnk')",
            "$Shortcut.TargetPath = Join-Path $env:LOCALAPPDATA 'Programs\\OpenBB\\OpenBB.exe'",
            "$Shortcut.Save()"
        ]
    },
    "uninstaller": {
        "script": [
            "Start-Process \"$env:LOCALAPPDATA\\Programs\\OpenBB\\Uninstall OpenBB ODP.exe\" -ArgumentList '/S' -Wait -ErrorAction SilentlyContinue",
            "Remove-Item ([Environment]::GetFolderPath('Desktop') + '\\OpenBB ODP Desktop.lnk') -ErrorAction SilentlyContinue"
        ]
    },
    "notes": [
        "OpenBB ODP Desktop 安装成功！",
        "",
