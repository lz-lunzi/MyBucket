{
    "version": "0.1.28",
    "description": "Windows 版 Qoder CLI 工具",
    "homepage": "https://qoder.com",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://download.qoder.com/qodercli/releases/0.1.28/qodercli_0.1.28_windows_amd64.zip",
            "hash": "10c0d1a5ebc50f202db6c07a720d65c9ff88cf7d7a25ce8e5241be201ddbf45a"
        }
    },
    "bin": "qodercli.exe",
    "checkver": {
        "url": "https://qoder-ide.oss-ap-southeast-1.aliyuncs.com/qodercli/channels/manifest.json",
        "regex": "qodercli_(\\d+\\.\\d+\\.\\d+)_windows_amd64\\.zip"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.qoder.com/qodercli/releases/$version/qodercli_$version_windows_amd64.zip",
                "hash": {
                    "url": "https://download.qoder.com/qodercli/releases/$version/SHA256SUMS",
                    "regex": "([a-f0-9]+)\\s+qodercli_$version_windows_amd64\\.zip"
                }
            }
        }
    },
    "post_install": "cmd /c mklink /J \"$dir\\..\\current\" \"$dir\"",
    "pre_uninstall": [
        "Stop-Process -Name node -Force -ErrorAction Ignore",
        "Get-CimInstance -ClassName Win32_Process | Where-Object { $_.ExecutablePath -like \"$dir\\*\" } | ForEach-Object { $_.Terminate() | Out-Null }",
        "Start-Sleep -Seconds 3",
        "Remove-Item -Path \"$dir\\..\\current\" -Force -Recurse -ErrorAction Ignore"
    ]
}
