{
    "version": "1.0.0",
    "description": "Minimal harness demonstrating long-running autonomous coding with the Claude Agent SDK",
    "homepage": "https://github.com/leonvanzyl/autonomous-coding",
    "license": "MIT",
    "url": "https://github.com/leonvanzyl/autonomous-coding/archive/refs/heads/main.zip",
    "bin": [
        "autonomous_agent_demo.py"
    ],
    "installer": {
        "script": [
            "# Verify Python is available",
            "if (!(Get-Command 'python' -ErrorAction SilentlyContinue)) {",
            "    Write-Host 'ERROR: Python is required but not installed.' -ForegroundColor Red",
            "    Write-Host 'Please install Python first, then retry this installation.' -ForegroundColor Yellow",
            "    exit 1",
            "}",
            "",
            "# Verify pip is available",
            "if (!(Get-Command 'pip' -ErrorAction SilentlyContinue)) {",
            "    Write-Host 'ERROR: pip is required but not installed.' -ForegroundColor Red",
            "    Write-Host 'Please install pip first, then retry this installation.' -ForegroundColor Yellow",
            "    exit 1",
            "}",
            "",
            "# Install Python dependencies",
            "Write-Host 'Installing Python dependencies...' -ForegroundColor Green",
            "try {",
            "    # Install core dependencies mentioned in the project",
            "    & pip install claude-code-sdk requests python-dotenv",
            "    Write-Host 'Python dependencies installed successfully.' -ForegroundColor Green",
            "    Write-Host 'Note: If you see errors, you may need to install additional dependencies manually.' -ForegroundColor Yellow",
            "} catch {",
            "    Write-Host 'WARNING: Failed to install some Python dependencies.' -ForegroundColor Yellow",
            "    Write-Host 'You may need to install them manually or check your pip configuration.' -ForegroundColor Yellow",
            "    Write-Host 'Required packages: claude-code-sdk, requests, python-dotenv' -ForegroundColor Yellow",
            "}",
            "",
            "# Create convenience scripts",
            "$AutonomousDemoScript = Join-Path $dir 'run-autonomous-coding.ps1'",
            "@\"",
            "# Autonomous Coding Runner",
            "# This script provides a convenient way to run the autonomous coding demo",
            "",
            "Write-Host 'Autonomous Coding - Claude Agent SDK Demo' -ForegroundColor Cyan",
            "Write-Host '=========================================' -ForegroundColor Cyan",
            "",
            "# Check for Claude Code CLI",
            "if (!(Get-Command 'claude' -ErrorAction SilentlyContinue)) {",
            "    Write-Host 'WARNING: Claude Code CLI not found.' -ForegroundColor Yellow",
            "    Write-Host 'Install it with: npm install -g @anthropic-ai/claude-code' -ForegroundColor Green",
            "    Write-Host '' -ForegroundColor White",
            "}",
            "",
            "# Check for environment configuration",
            "if (!(Test-Path \"$dir\\.env\")) {",
            "    Write-Host 'WARNING: .env file not found.' -ForegroundColor Yellow",
            "    Write-Host 'Copy .env.example to .env and configure your API keys:' -ForegroundColor Green",
            "    Write-Host 'cp \"$dir\\.env.example\" \"$dir\\.env\"' -ForegroundColor White",
            "    Write-Host '' -ForegroundColor White",
            "}",
            "",
            "Write-Host 'Running autonomous coding demo...' -ForegroundColor Green",
            "Write-Host 'Press Ctrl+C to pause/resume the agent session.' -ForegroundColor Yellow",
            "Write-Host '' -ForegroundColor White",
            "",
            "# Run the autonomous coding demo",
            "try {",
            "    & python \"$PSScriptRoot\\autonomous_agent_demo.py\" @args",
            "} catch {",
            "    Write-Host 'Error running autonomous coding demo:' -ForegroundColor Red",
            "    Write-Host $_.Exception.Message -ForegroundColor Yellow",
            "    exit 1",
            "}",
            "\"@ | Out-File -FilePath $AutonomousDemoScript -Encoding UTF8",
            "",
            "# Create setup instructions",
            "$SetupPath = Join-Path $dir 'SETUP-INSTRUCTIONS.txt'",
            "@\"",
            "AUTONOMOUS CODING - SETUP INSTRUCTIONS",
            "=====================================",
            "",
            "This installation includes the autonomous coding demo scripts.",
            "Follow these steps to use the tool:",
            "",
            "PREREQUISITES:",
            "-------------",
            "1. Python 3.x (already installed if you see this)",
            "2. Node.js and npm",
            "3. Claude Code CLI: npm install -g @anthropic-ai/claude-code",
            "",
            "CONFIGURATION:",
            "------------",
            "1. Copy the environment template:",
            "   cp .env.example .env",
            "",
            "2. Edit .env and add your credentials:",
            "   ANTHROPIC_API_KEY=your-api-key-here",
            "   # OR",
            "   CLAUDE_CODE_OAUTH_TOKEN=your-oauth-token-here",
            "",
            "GET API KEY:",
            "-----------",
            "1. Visit: https://console.anthropic.com/",
            "2. Create an account and generate an API key",
            "",
            "USAGE:",
            "-----",
            "Option 1: Use the PowerShell script",
            "   .\\run-autonomous-coding.ps1",
            "",
            "Option 2: Run directly with Python",
            "   python autonomous_agent_demo.py --project-dir ./my_project",
            "",
            "For testing (limited iterations):",
            "   python autonomous_agent_demo.py --project-dir ./my_project --max-iterations 3",
            "",
            "IMPORTANT NOTES:",
            "--------------",
            "- This demo takes a LONG time to run (hours for full completion)",
            "- The agent appears to hang during first run (generating test cases)",
            "- Press Ctrl+C to pause/resume between sessions",
            "- Check your API usage - this can be expensive!",
            "",
            "For more information: https://github.com/leonvanzyl/autonomous-coding",
            "\"@ | Out-File -FilePath $SetupPath -Encoding UTF8",
            "",
            "Write-Host 'Autonomous Coding installed successfully!' -ForegroundColor Green",
            "Write-Host 'Please read SETUP-INSTRUCTIONS.txt for detailed setup steps.' -ForegroundColor Yellow",
            "Write-Host 'Run: .\\run-autonomous-coding.ps1 to get started.' -ForegroundColor Yellow"
        ]
    },
    "notes": [
        "Autonomous Coding - Claude Agent SDK Demo installed!",
        "Requires: Node.js, Claude Code CLI, and API credentials",
        "Read SETUP-INSTRUCTIONS.txt for detailed setup steps",
        "Run: .\\run-autonomous-coding.ps1 to start"
    ],
    "checkver": {
        "url": "https://api.github.com/repos/leonvanzyl/autonomous-coding/commits/main",
        "regex": "sha\":\"([a-f0-9]{7,40})\""
    },
    "autoupdate": {
        "url": "https://github.com/leonvanzyl/autonomous-coding/archive/refs/heads/main.zip"
    }
}